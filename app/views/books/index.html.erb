<h1><strong>Books</strong></h1>
<% @books.each do |book| %>
 <p>Title</p>
 <span><%= book.title %></span>
 <p>Body</p>
 <span><%= book.body %></span>
 <nav>
    <ul class ="nav-list-item">
     <il class = "nav-list">
      <a href= "/books/ :id">Show</a></il>
     <il class = "nav-list">
      <a href= "(book/id/edit)">Edit</a></il>
     <il class = "nav-list">
      <a href= "(book/id/destroy)">Destroy</a>
      </il>
    </ul>
 </nav>
 <% end %>
 
 
 <h1><strong>New book</strong></h1>
<%= form_with model:@book, url:'/books',loclal:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
