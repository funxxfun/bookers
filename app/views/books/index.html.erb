<% if flash[:notice] %>
 <p id="notice">
  <%= flash[:notice] %>
 </p>
<% end %>

<h1>Books</h1>
<table>

  <tr>
   <th>Title</th>
   <th>Body</th>
   <th colspan="3">&nbsp</th>
  </tr>

     <% @books.each do |book| %>


  <tr>

   <td><%= book.title %></td>
   <td><%= book.body %></td>
   <td><%= link_to "Show",book_path(book.id) %></td>
   <td><%= link_to "Edit",edit_book_path(book.id) %></td>
   <td><%= link_to "Destroy",book_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %></td>
  </tr>

 <% end %>
</table>

<div class="form-error">
 <% if @book.errors.any? %>
  <div class="error-message">
  <%= "errors prohibited this book from being saved" %></br>
  </div>
  <% @book.errors.full_messages.each do |message| %>
   <%= message %></br>
  <% end %>
 <% end %>
</div>

  <h1>New book</h1>
     <%= form_with model:@book, url:'/books',local:true do |f| %>

  <div class="title">
   <h4>Title</h4>
   <%= f.text_field:title %>
  </div>
  <div class="body">
   <h4>Body</h4>
   <%= f.text_area:body %>
  </div>
 <div>
  <%= f.submit'Create Book' %>
  </div>
<% end %>
 </div>
