<div class="form-error">
 <% if @book.errors.any? %>
  <div class="error-message">
  <%= "errors prohibited this book from being saved" %></br>
  </div>
  <% @book.errors.full_messages.each do |message| %>
   <%= message %></br>
  <% end %>
 <% end %>
</div>


<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}",local:true do |f| %>
<div class="title">
 <h4>Title</h4>
 <%= f.text_field:title %>
</div>
<div class="body">
 <h4>Body</h4>
 <%= f.text_area:body %>
</div>
<div class="tag">
<%= f.submit 'Update Book' %>
  
</div>


<% end %>

<%= link_to "Show",book_path(@book.id) %>
<%= "|" %>
<%= link_to "Back",books_path %>
